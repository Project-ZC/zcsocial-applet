/* pages/profile/shop-staff.wxss */

/* 全局容器 */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f8fa;
}

/* 顶部导航栏 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.header-right {
  display: flex;
  align-items: center;
}

.action-btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.gen-qrcode {
  font-size: 40rpx;
}

.icon-add {
  font-size: 44rpx;
}



/* 员工管理页 */
.staff-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
}

/* 角色筛选 */
.role-filter {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.role-item {
  padding: 12rpx 24rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: #666;
  border-radius: 24rpx;
  background-color: #f5f5f5;
  transition: all 0.3s;
}

.role-item.active {
  background-color: #e6f7ff;
  color: #1890ff;
  font-weight: 500;
}

/* 员工列表 */
.staff-list {
  flex: 1;
}

.staff-item {
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.staff-item {
  display: flex;
  position: relative;
}

.staff-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.staff-avatar image {
  width: 100%;
  height: 100%;
}

.staff-info {
  flex: 1;
}

.staff-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.staff-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-right: 20rpx;
}

.staff-role {
  font-size: 24rpx;
  color: #1890ff;
  background-color: #e6f7ff;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.staff-intro {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

.staff-contact {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
}

.staff-permissions {
  margin-top: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.permission-tag {
  font-size: 22rpx;
  background-color: #f0f5ff;
  color: #1890ff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid #d6e7ff;
}

.staff-actions {
  display: flex;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.action-edit, .action-delete {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.action-edit {
  color: #1890ff;
}

.action-delete {
  color: #ff4d4f;
}



/* 空状态 */
.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #bbb;
}

/* 加载状态 */
.loading {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.loading text {
  font-size: 28rpx;
  color: #999;
}

/* 模态框 */
.modal, .confirm-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
}

.modal-content, .qrcode-modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 90vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-header text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.form-input, .form-picker {
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.form-picker {
  justify-content: space-between;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.avatar-picker {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  position: relative;
  margin: 0 auto;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-upload-icon {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  background-color: #1890ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
}

.modal-footer {
  display: flex;
  padding: 20rpx 30rpx 50rpx 30rpx;
  border-top: 1rpx solid #eee;
}

.cancel-btn, .confirm-btn, .save-btn, .share-btn, .delete-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
  margin-right: 20rpx;
}

.confirm-btn, .save-btn, .share-btn {
  background-color: #1890ff;
  color: #fff;
}

.delete-btn {
  background-color: #ff4d4f;
  color: #fff;
}



/* 确认模态框 */
.confirm-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.confirm-title {
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  padding: 30rpx 0;
}

.confirm-message {
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 30rpx 40rpx 30rpx;
  text-align: center;
}

.confirm-btns {
  display: flex;
  border-top: 1rpx solid #eee;
}

.confirm-btns .cancel-btn, .confirm-btns .delete-btn {
  flex: 1;
  border-radius: 0;
  margin: 0;
  height: 100rpx;
}

/* 二维码模态框 */
.qrcode-container {
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qrcode-image {
  width: 400rpx;
  height: 400rpx;
  margin-bottom: 30rpx;
}

.qrcode-tip {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.qrcode-actions {
  display: flex;
  padding: 20rpx 30rpx 50rpx 30rpx;
}

.save-btn {
  margin-right: 20rpx;
}

/* 权限选择模块 */
.permissions-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.permission-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  border: 1rpx solid #eee;
  transition: all 0.3s;
}

.permission-item:active {
  background-color: #e6f7ff;
  border-color: #91d5ff;
}

.permission-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  transition: all 0.3s;
  flex-shrink: 0;
}

.permission-checkbox.checked {
  background-color: #1890ff;
  border-color: #1890ff;
  color: #fff;
}

.permission-content {
  flex: 1;
}

.permission-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.permission-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 职位显示样式 */
.role-display {
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  border: 1rpx solid #e6f7ff;
}

.current-role {
  font-size: 30rpx;
  color: #1890ff;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.role-tip {
  font-size: 24rpx;
  color: #999;
  line-height: 1.3;
}

/* 模态框内的统一搜索栏 */
.unified-search-container {
  background-color: #f8f9fa;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
}

.search-tabs {
  display: flex;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 4rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.search-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 6rpx;
  transition: all 0.3s;
}

.search-tab.active {
  background-color: #1890ff;
  color: #fff;
  font-weight: 500;
}

.search-box {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.search-input:focus {
  border-color: #1890ff;
}

.search-btn-modal {
  height: 80rpx;
  padding: 0 30rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  min-width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  transition: all 0.3s;
}

.search-btn-modal:active {
  background-color: #096dd9;
  transform: scale(0.98);
}

/* 禁用状态的输入框样式 */
.form-input[disabled], .form-textarea[disabled] {
  background-color: #f5f5f5;
  color: #999;
  cursor: not-allowed;
}

/* 编辑模式下禁用头像上传功能 */
.avatar-picker.disabled {
  cursor: not-allowed;
}

.avatar-picker.disabled .avatar-upload-icon {
  display: none;
}